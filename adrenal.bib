  journal   = {Medical \& Biological Engineering \& Computing},
  keywords  = {ADRENAL tumors,Adrenal tumours,BIOPSY,COMPUTED tomography,Computed tomography,HORMONES,Hybrid classifier,IMMUNE system,Optimisation,Tumour classification},
  month     = {4},

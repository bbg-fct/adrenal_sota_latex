  journal   = {American Journal of Roentgenology},
  keywords  = {Adrenal nodules,Chemical-shift MRI,Contrast-enhanced CT,Texture analysis},
  month     = {3},
  pages     = {554-561},
  pmid      = {30620676},
  publisher = {American Roentgen Ray Society},
  title     = {Can Texture Analysis Be Used to Distinguish Benign From Malignant Adrenal Nodules on Unenhanced CT, Contrast-Enhanced CT, or In-Phase and Opposed-Phase MRI?},

  issn      = {14321084},
  issue     = {2},
  journal   = {European Radiology},
  keywords  = {Adrenal gland neoplasms,Adrenocortical adenoma,Chemical shift imaging,Magnetic resonance imaging},
  month     = {2},
  pages     = {806-817},
  publisher = {Springer Verlag},
  title     = {Chemical shift imaging for evaluation of adrenal masses: a systematic review and meta-analysis},
